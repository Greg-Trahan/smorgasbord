<section class="profile-dashboard">
<div class=" animate__animated animate__fadeInLeft user-post">
    <h2>Where should we eat?</h2>
    <form class="form-box">
    <label class="form-text">Restaurant Name:</label>
    <input type="text" placeholder="Olive Garden" class="form-input">
    <label class="form-text">Type of Food:</label>
    <input type="text" placeholder="Italian" class="form-input">
    <label class="form-text">How many $'s on a scale of 1-3:</label>
    <input type="text" maxlength="3" placeholder="$$$" class="form-input">
    <label class="form-text">Address:</label>
    <input type="text" placeholder="1234 Vienna Dr, Sicily City, IT 56789" class="form-input">
    <label class="form-text">Description:</label>
    <textarea placeholder="An American casual dining restaurant chain specializing in Italian-American cuisine. A nice place to take your family and enjoy delicious breadsticks."></textarea>
    <button type="submit" class="form-btn">submit</button>
    </form>

</div>

<div class="animate__animated animate__fadeInRight user-posted">
    <div class="user-restaurants">
        <h2>My Restaurants</h2>
        {{#each values as |values|}}
        <a href="/api/details/{{values.id}}"><h3>{{values.name}}</h3></a>
        <div>
            <button class="user-btn edit-locale-btn">Edit</button>
            <button class="user-btn delete-locale-btn">Delete</button>
        </div>
    </div>
    {{/each}}
</div>
</section>