<section class="profile-dashboard">
  <div class="animate__animated animate__fadeInUp animate__delay-1s restaurant">
    <div class="content-info">
    <div class="info">
      <h2>{{values.name}}</h2>
      <h3>{{values.type_id}}</h3>
      <h3>Price: {{values.price}}</h3>
      <p>{{values.address}}</p>
    </div>
    <div class="description">
    <h3>Description</h3>
      <p>{{values.description}}</p>
      <p>Posted by {{username}}</p>
    </div>
  </div>
  </div>

  <section class="animate__animated animate__fadeInUp animate__delay-2s form-flex">
    <form class="form-box review-frame">
      <div class="review-title">
      <label><h2>Add a Review</h2></label>
      <img src="/css/images/review.png" class="thumbsup">
      </div>
      <textarea name="comment-body" placeholder="Leave your review here"></textarea>

      <button type="submit" class="form-btn">Submit</button>
  </form>
  </section>


</section>

{{#each values as |values|}}
<section class="animate__animated animate__fadeInUp animate__delay-3s restaurant">
  <div class ="user-review">
  <p class="review-text">{{values.reviewtext}}</p>
  <p>posted on {{format_date values.createdAt}} by {{username}}</p>
</div>
</section>
{{/each}}